package "logging-example", "0.0.1" do |pkg|
	pkg.target "echo" do |t|
		t.echo { "Hello, from Weyland!" }
	end

	pkg.target "debug" do |t|
		t.debug { "Hello from debug log level!" }
	end

	pkg.target "info" do |t|
		t.info { "Hello from info log level!" }
	end

	pkg.target "warn" do |t|
		t.warn { "Hello from warn log level!" }
	end

	pkg.target "error" do |t|
		t.error { "Hello from error log level!" }
	end
end